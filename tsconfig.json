{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "types": [
      "jest"
    ],
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": "./",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "typings"
  ]
}
